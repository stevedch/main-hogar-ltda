<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% stylesheets 'bundles/app/css/bootstrap.min.css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% if app.user %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header navbar-right">
                <a class="navbar-brand" href="#">Hogar facil ltda.</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="{{ path('fos_user_security_logout') }}">Cerrar sesi√≥n</a></li>
                </ul>
                <ul class="nav navbar-nav">
                    {% if app.user.hasRole('ROLE_VENDEDOR') %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true" aria-expanded="false">
                                Vendedor ({{ app.user.getFullName() }})
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-header">Registros</li>
                                <li>
                                    <a href="{{ path('sellers_supplier') }}">Registro de compra</a>
                                </li>
                                <li>
                                    <a href="#">Registro de venta</a>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li class="dropdown-header">Listados</li>
                                <li>
                                    <a href="#">Lista de compra</a>
                                </li>
                                <li>
                                    <a href="#">One more separated link</a>
                                </li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endif %}

{% block body %}
    {% block main_content %}{% endblock %}
{% endblock %}

{% javascripts
'bundles/app/js/jquery-3.1.1.min.js'
'bundles/app/js/bootstrap.js'
'bundles/app/js/config.default.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% block javascripts %}{% endblock %}
</body>
</html>
