{% extends 'base.html.twig' %}

{% block body %}
    {% set detail = movement.documentNumber %}
    {% set data = detail.metadata %}
    {% set product = data.product %}
    {% set customer = data.customer %}
    {% set collector = movement.collector.user %}

    <div class="table-header">
    Nº {{ movement.id }} / Cliente: {{ customer.getFullName() }}
    </div>

    <table class="table table-bordered table-responsive">

        <tbody>
        <tr>
            <th>Fecha de emisión</th>
            <td>{{ detail.dateOfIssue|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Tipo de venta</th>
            <td>{{ detail.type|trans }}</td>
        </tr>
        <tr>
            <th>Cobrador</th>
            <td>{{ collector.getFullName() }}</td>
        </tr>
        <tr>
            <th>Vendedor</th>
            <td>{{ data.seller.fullName }}</td>
        </tr>
        <tr>
            <th>Nº de producto</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Nombre de producto</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Precio de producto</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>Cantidad</th>
            <td>{{ detail.quantity }}</td>
        </tr>
        <tr>
            <th>Forma de pago</th>
            <td>{{ movement.paidForm|trans }}</td>
        </tr>
        <tr>
            <th>Monto de abono</th>
            <td>{{ movement.rode }}</td>
        </tr>
        <tr>
            <th>Cliente</th>
            <td>{{ customer.getFullName() }}</td>
        </tr>
        </tbody>
    </table>
    <a class="btn btn-xs btn-warning pull-right" href="{{ path('collectors_sale', {id: detail.id}) }}">Volver</a>
{% endblock %}