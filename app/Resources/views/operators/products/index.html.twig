{% extends 'base.html.twig' %}

{% block body %}
    <table id="table-products"
           class="uk-table uk-table-small uk-table-hover uk-table-striped dataTable uk-table-expand">
        <caption>
            <h4 class="uk-text-primary">Productos</h4>
        </caption>
        <thead>
        <tr>
            <th>NÂº</th>
            <th>Bodega</th>
            <th>Nombre</th>
            <th>Cantidad / Stock</th>
            <th>Precio</th>
            <th>Estado de Stock</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('product_operators_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.fullCellar }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.price }}</td>
                <td>
                    {% if product.status|trans == 'Con Stock' %}
                        <span class="uk-label uk-label-success">{{ product.status|trans }}</span>
                    {% else %}
                        <span class="uk-label uk-label-danger">{{ product.status|trans }}</span>
                    {% endif %}
                </td>
                <td>
                    <a class="uk-button uk-button-xs uk-button-primary"
                       href="{{ path('product_operators_show', { 'id': product.id }) }}">Ver</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
