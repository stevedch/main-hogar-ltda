{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuarios list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Rut</th>
                <th>Nombre</th>
                <th>Apellidoparteno</th>
                <th>Apellidomarteno</th>
                <th>Contrasenia</th>
                <th>Estado</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td><a href="{{ path('usuarios_show', { 'id': usuario.id }) }}">{{ usuario.id }}</a></td>
                <td>{{ usuario.rut }}</td>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apellidoParteno }}</td>
                <td>{{ usuario.apellidoMarteno }}</td>
                <td>{{ usuario.contrasenia }}</td>
                <td>{{ usuario.estado }}</td>
                <td>
                    {% for rol in usuario.roles %}
                        {{ rol }}
                    {% endfor %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('usuarios_show', { 'id': usuario.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('usuarios_edit', { 'id': usuario.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuarios_new') }}">Create a new usuario</a>
        </li>
    </ul>
{% endblock %}
