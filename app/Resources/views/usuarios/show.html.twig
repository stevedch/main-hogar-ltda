{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuario</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usuario.id }}</td>
            </tr>
            <tr>
                <th>Rut</th>
                <td>{{ usuario.rut }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidoparteno</th>
                <td>{{ usuario.apellidoParteno }}</td>
            </tr>
            <tr>
                <th>Apellidomarteno</th>
                <td>{{ usuario.apellidoMarteno }}</td>
            </tr>
            <tr>
                <th>Contrasenia</th>
                <td>{{ usuario.contrasenia }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ usuario.estado }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for rol in usuario.roles %}
                        {{ rol }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuarios_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('usuarios_edit', { 'id': usuario.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
